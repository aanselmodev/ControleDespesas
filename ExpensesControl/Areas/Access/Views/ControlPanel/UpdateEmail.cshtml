@model ExpensesControl.Models.User;
@{ ViewData["Title"] = "Alterar E-mail"; }


<header class="d-flex flex-wrap align-content-center justify-content-md-between py-3 mb-4">
    <div class="container">
        <a asp-action="Index" asp-controller="ControlPanel" asp-area="Access" asp-route-id="@_login.GetUser().Id" class="btn btn-primary">voltar <i class="bi bi-arrow-bar-left"></i></a>
    </div>
</header>

<div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-12 col-md-8 col-lg-6 col-xl-5">
            <div class="card">
                <div class="card-body p-2 text-center">
                    <div class="mb-md-5 mt-md-4 pb-5">
                        <div class="py-2 text-center">
                            <i class="bi bi-person-lines-fill default-img-icon"></i>
                        </div>
                        <h3 class=" mb-3">alterar e-mail</h3>
                        <form method="post">
                            <input type="hidden" asp-for="Id" />
                            <div class="col-sm-12 p-2">
                                <label asp-for="Email" class="form-label d-flex">digite o novo e-mail:</label>
                                <div class="input-group">
                                    <input type="email" class="form-control password-field" asp-for="Email" placeholder="" />
                                </div>
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                            <div class="col-sm-12">
                                @{ await Html.RenderPartialAsync("~/Views/Shared/_Alert.cshtml");}
                            </div>

                            <br />
                            <div class="col" align="center">
                                <button type="submit" class="btn btn-primary">atualizar <i class="bi bi-save"></i></button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
