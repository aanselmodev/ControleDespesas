@model ControleDespesas.Models.Usuario;
@{ ViewData["Title"] = "Recuperar a Senha"; }


<header class="d-flex flex-wrap align-items-center justify-content-center justify-content-md-between py-3 mb-4 border-bottom">
    <a asp-action="Login" asp-controller="Login" class="btn btn-secondary">Voltar</a>
</header>

<div class="container" align="center">
    <main>
        <div class="row">
            <form method="post">
                <h4 class=" mb-3 fw-normal">Recuperação de Senha</h4>

                <div class="col-sm-4 p-2">
                    <label asp-for="Email" class="form-label d-flex">Preencha o e-mail que deseja recuperar a senha:</label>
                    <input type="email" class="form-control" asp-for="Email" placeholder="nome@exemplo.com">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
              
                <div class="col-sm-4">
                    @{ await Html.RenderPartialAsync("~/Views/Shared/_Mensagem.cshtml");}
                </div>

                <hr class="my-4" />
                <button class="btn btn-secondary col-sm-2 p-2" type="submit">Enviar nova senha</button>
                <br />
                <br />
            </form>
        </div>

    </main>
</div>
