@model ControleDespesas.Models.Usuario;
@{ ViewData["Title"] = "Login"; }


<header class="d-flex flex-wrap align-items-center justify-content-center justify-content-md-between py-3 mb-4 border-bottom">
</header>

<div class="container" align="center">
    <div class="py-2 text-center">
        <img class="" src="~/lib/bootstrap-icons-1.9.1/cash-coin.svg" width="100" height="100">
        <h2>Controle de Despesas</h2>
    </div>
    <main>
        <div class="row">
            <form method="post">
                <h4 class=" mb-3 fw-normal">Por favor, faça login</h4>

                <div class="col-sm-4 p-2">
                    <label asp-for="Email" class="form-label d-flex">E-mail</label>
                    <input type="email" class="form-control" asp-for="Email" placeholder="nome@exemplo.com">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="col-sm-4 p-2">
                    <label asp-for="Senha" class="form-label d-flex">Senha</label>
                    <input type="password" class="form-control" asp-for="Senha" placeholder="*********">
                    <span asp-validation-for="Senha" class="text-danger"></span>
                </div>
                <div class="col-sm-4">
                    @{ await Html.RenderPartialAsync("~/Views/Shared/_Mensagem.cshtml");}
                    <br />
                </div>
                <div>
                    <a asp-action="RecuperarSenha" asp-controller="Login" class="link-primary">Esqueceu a senha?</a>
                </div>

                <hr class="my-4" />
                <button class="btn btn-primary col-sm-2 p-2" type="submit">Entrar</button>
                <br />
                <br />
                <a asp-action="Cadastrar" asp-controller="Cadastro" class="link-primary">Não é cadastrado?</a>
            </form>
        </div>

    </main>
</div>
