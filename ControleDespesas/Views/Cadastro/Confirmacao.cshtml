@model ControleDespesas.Models.Usuario;
@{
    ViewData["Title"] = "Confirmação";
}

<header class="d-flex flex-wrap align-items-center justify-content-center justify-content-md-between py-3 mb-4 border-bottom">
</header>

<div class="container" align="center">
    <div class="row py-2 text-center">
        <img class="" src="~/lib/bootstrap-icons-1.9.1/check-circle.svg" width="100" height="100" />
        <h2 class="alert">Cadastro realizado com sucesso!</h2>
        <p>Um e-mail de confirmação foi enviado para <b>@HttpContextAccessor.HttpContext.Session.GetString("Usuario.Email").</b></p>
    </div>
</div>
<div class="container align-content-center" align="center">
    <a asp-action="Index" asp-controller="Login" class="btn btn-primary col-sm-2 p-2">Fazer login</a>
</div>

