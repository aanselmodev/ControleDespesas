@model ControleDespesas.Models.Usuario;
@{
    ViewData["Title"] = "Cadastrar";
}

<header class="d-flex flex-wrap align-items-center justify-content-center justify-content-md-between py-3 mb-4 border-bottom">
    <a asp-action="Index" asp-controller="Home" class="btn btn-secondary">Voltar</a>
</header>

<main>
    <div class="container" align="center">
        <div class="py-2 text-center">
            <h1><i class="bi bi-person-badge-fill"></i></h1>
            <h2>Cadastro</h2>
        </div>

        <div class="container">
            <div class="row">
                <p class=" mb-3 fw-normal">Preencha os dados abaixo:</p>
                <form method="post">
                    <div class="container">
                        <div class="col-sm-4 p-2">
                            <label asp-for="Nome" class="form-label d-flex" style="text-align: left" >Nome</label>
                            <input asp-for="Nome" type="text" class="form-control">
                            <span asp-validation-for="Nome" class="text-danger"></span>
                        </div>

                        <div class="col-sm-4 p-2">
                            <label asp-for="Sobrenome" class="form-label d-flex">Sobrenome</label>
                            <input asp-for="Sobrenome" type="text" class="form-control">
                            <span asp-validation-for="Sobrenome" class="text-danger"></span>
                        </div>

                        <div class="col-sm-4 p-2">
                            <label class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" asp-for="Sexo" value="M">
                                <span class="form-check-label">Masculino</span>
                            </label>
                            <label class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" asp-for="Sexo" value="F">
                                <span class="form-check-label">Feminino</span>
                            </label>
                            <div>
                                <span asp-validation-for="Sexo" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-sm-4 p-2">
                            <label asp-for="Email" class="form-label d-flex">E-mail</label>
                            <input type="email" class="form-control" asp-for="Email" placeholder="nome@exemplo.com">
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="col-sm-4 p-2">
                            <label asp-for="Senha" class="form-label d-flex">Senha</label>
                            <input type="password" class="form-control" asp-for="Senha" placeholder="*********">
                            <span asp-validation-for="Senha" class="text-danger"></span>
                        </div>

                        <div class="col-sm-4 p-2">
                            <label asp-for="ConfirmarSenha" class="form-label d-flex">Confirme sua senha</label>
                            <input type="password" class="form-control" asp-for="ConfirmarSenha" placeholder="*********">
                            <span asp-validation-for="ConfirmarSenha" class="text-danger"></span>
                        </div>
                        <hr class="my-4" />
                        <div class="col" align="center">
                            <button type="submit" class="btn btn-secondary">Cadastrar</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</main>

