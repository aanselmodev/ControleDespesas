@model ControleDespesas.Models.Usuario;
@{ 
    ViewData["Title"] = "Cadastrar";
}

<header class="d-flex flex-wrap align-items-center justify-content-center justify-content-md-between py-3 mb-4 border-bottom">
    <a asp-action="Index" asp-controller="Home" class="btn btn-secondary">Voltar</a>
</header>

<div class="d-flex justify-content-center">
    <main>
        <div class="py-2 text-center">
            <h1><i class="bi bi-person-badge-fill"></i></h1>
            <h2>Cadastro</h2>
        </div>

        <div class="row">
            <h4 class="mb-3">Preencha seus dados</h4>
            <form method="post" class="form-group">
                <div class="container">
                    <div class="col-md-13 py-1 ">
                        <label asp-for="Nome" class="form-label">Nome</label>
                        <input asp-for="Nome" type="text" class="form-control">
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>

                    <div class="col-md-13 py-1 ">
                        <label asp-for="Sobrenome" class="form-label">Sobrenome</label>
                        <input asp-for="Sobrenome" type="text" class="form-control">
                        <span asp-validation-for="Sobrenome" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" asp-for="Sexo" value="M">
                            <span class="form-check-label">Masculino</span>
                        </label>
                        <label class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" asp-for="Sexo" value="F">
                            <span class="form-check-label">Feminino</span>
                        </label>
                        <span asp-validation-for="Sexo"></span>
                    </div>

                    <div class="col-md-13 py-1 ">
                        <label asp-for="Email" class="form-label">E-mail</label>
                        <input type="email" class="form-control" asp-for="Email" placeholder="nome@exemplo.com">
                        <span asp-validation-for="Email"></span>
                    </div>

                    <div class="col-md-13 py-1 ">
                        <label asp-for="Senha" class="form-label">Senha</label>
                        <input type="password" class="form-control" asp-for="Senha" placeholder="*********">
                        <span asp-validation-for="Senha"></span>
                    </div>

                    <div class="col-md-13 py-1 ">
                        <label asp-for="ConfirmarSenha" class="form-label">Confirme sua senha</label>
                        <input type="password" class="form-control" asp-for="ConfirmarSenha" placeholder="*********">
                        <span asp-validation-for="ConfirmarSenha"></span>
                    </div>
                </div>
                <hr class="my-4">
                <div class="row justify-content-lg-center">
                    <div class="col-md-4">
                        <button type="submit" class="btn btn-secondary">Cadastrar</button>
                    </div>
                </div>
            </form>
        </div>
    </main>
</div>

